<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<head th:replace="fragments :: page_head('Users - Shopme Admin')" />

<body>
	<div class="container-fluid">
		<div th:replace="navigation :: menu"></div>

		<div>
			<h1>Manage Categories</h1>
			<a th:href="@{/categories/new}">Create New Category</a>
			&nbsp;|&nbsp;
			<a th:href="@{/categories/export/csv}">Export CSV</a>
		</div>

		<div th:if="${message != null}" class="alert alert-success text-center">
			[[${message}]]
		</div>

		<div>
			<form th:action="@{/categories/page/1}" class="form-inline m-3">
				<input type="hidden" name="sortField" th:value="${sortField}" />
				<input type="hidden" name="sortDir" th:value="${sortDir}" />
				Filter:&nbsp;
				<input type="search" name="keyword" th:value="${keyword}" class="form-control-inline"
					style="width: 200px; height: 30px;" required />

				<button type="submit" class="btn btn-primary mb-2"><i class="fa-solid fa-magnifying-glass"></i></button>

				<button type="button" class="btn btn-secondary mb-2" onclick="clearFilter()"><i
						class="fa-solid fa-eraser"></i></button>

			</form>
		</div>

		<div class="table-responsive">
			<table class="table">
				<thead class="table-dark">
					<tr>
						<th th:replace="fragments :: column_link('id', 'User ID')" />
						<th th:replace="fragments :: column_link('image', 'Category Image')" />
						<th th:replace="fragments :: column_link('name', 'Category Name')" />
						<th th:replace="fragments :: column_link('alias', 'Alias')" />
						<th th:replace="fragments :: column_link('enabled', 'Enabled')" />
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr th:each="cat : ${listCategories}">
						<td>[[${cat.id}]]</td>
						<td>[[${cat.name}]]</td>
						<td>[[${cat.alias}]]</td>
						<td>[[${cat.lastName}]]</td>
						<td>[[${cat.roles}]]</td>
						<td>
							<a th:if="${user.enabled == true}" class="fa-solid fa-circle-check fa-2x icon-green"
								style="text-decoration: none" th:href="@{'/categories/' + ${category.id} + '/enabled/false'}"
								title="Disable This Category"></a>

							<a th:if="${user.enabled == false}" class="fa-solid fa-circle fa-2x fa-2x icon-dark"
								style="text-decoration: none" th:href="@{'/categories/' + ${category.id} + '/enabled/true'}"
								title="Enable This Category"></a>
						</td>

						<td>
							<a class="fas fa-edit fa-2x icon-blue" style="text-decoration: none"
								th:href="@{'/categories/edit/' + ${category.id}}" title="Edit this user"></a>
							&nbsp;
							<a class="fas fa-trash fa-2x icon-purple link-delete"
								th:href="@{'/categories/delete/' + ${category.id}}" th:categoruId="${category.id}"
								title="Delete this user"></a>
						</td>
					</tr>
				</tbody>
			</table>
		</div>


		<div class="text-center m-1" th:if="${totalItems > 0}">
			<span>Showing users # [[${startCount}]] to [[${endCount}]] of [[${totalItems}]]</span>
		</div>

		<div class="text-center m-1" th:unless="${totalItems > 0}">
			<span>No users found</span>
		</div>

		<div th:if="${totalPages > 1}"> <!--chưa hiểu để làm gì-->
			<nav>
				<ul class="pagination justify-content-center">
					<li th:class="${currentPage > 1 ? 'page-item' : 'page-item disabled'}">
						<a th:replace="~{fragments :: page_link(1, 'First')}"></a>

					</li>

					<li th:class="${currentPage > 1 ? 'page-item' : 'page-item disabled'}">
						<a th:replace="~{fragments :: page_link(${currentPage - 1}, 'Previous')}"></a>
					</li>

					<li th:class="${currentPage != i ? 'page-item': 'page-item active'}"
						th:each="i : ${#numbers.sequence(1, totalPages)}">
						<a th:replace="~{fragments :: page_link(${i}, ${i})}"></a>

					</li>

					<li th:class="${currentPage < totalPages ? 'page-item' : 'page-item disabled'}">
						<a th:replace="~{fragments :: page_link(${currentPage + 1}, 'Next')}"></a>

					</li>

					<li th:class="${currentPage < totalPages ? 'page-item' : 'page-item disabled'}">
						<a th:replace="fragments :: page_link(${totalPages}, 'Last')"></a>
					</li>
				</ul>
			</nav>
		</div>

		<div class="modal fade text-center" id="confirmModal">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title">Delete Confirmation</h4>
						<button type="button" class="close" data-dismiss="modal">&times;</button>
					</div>

					<div class="modal-body">
						<span id="confirmText"></span>
					</div>

					<div class="modal-footer">
						<a class="btn btn-success" href="" id="yesButton">Yes</a>
						<button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
					</div>
				</div>
			</div>
		</div>

		<div th:replace="fragments :: footer"></div>

	</div>

	<script type="text/javascript">
		$(document).ready(function () {
			$(".link-delete").on("click", function (e) {
				e.preventDefault();
				link = $(this);
				//alert($(this).attr("href"));
				userId = link.attr("userId");
				$("#yesButton").attr("href", link.attr("href"));
				$("#confirmText").text("Are you sure you want to delete this user ID " + userId + "?");
				$("#confirmModal").modal('show');
			});
		});

		function clearFilter() {
			window.location = "[[@{/users}]]";
		}

	</script>
</body>

</html>